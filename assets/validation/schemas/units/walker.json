{
    "$schema": "http://json-schema.org/schema#",
    "title": "space ship",
    "description": "schema for all space crafts in the game.",
    "type": "object",

    "properties": {
        "class": {
            "$ref": "../basics/unitClass.json"
        },
        "metaData": {
            "type": "object",
            "properties": {
                "className": {
                    "type": "string"
                },
                "length": {
                    "type": "integer"
                },
                "height": {
                    "type": "integer"
                },
                "width": {
                    "type": "integer"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "buildCosts": {
            "$ref": "../basics/resourceSet.json"
        },
        "structurePoints": {
            "type": "integer"
        },
        "armourValue": {
            "type": "integer"
        },
        "unitStorage": {
            "type": "integer"
        },
        "materialStorage": {
            "type": "integer"
        },
        "hangarCapacity": {
            "type": "integer"
        },
        "equipmentSlots": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "identifier": {
                        "type": [
                            "string",
                            "array"
                        ],
                        "items": {
                            "type": "string"
                        }
                    },
                    "defaultItem": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                }
            }
        },
        "engineSlot": {
            "type": "object",
            "properties": {
                "maxSizeClass": {
                    "type": "integer"
                },
                "energyConsumption": {
                    "type": "integer"
                },
                "fuelConsumption": {
                    "type": "integer"
                },
                "defaultItem": {
                    "type": [
                        "string"
                    ]
                }
            }
        }
    },
    "required": [
        "class",
        "buildCosts",
        "structurePoints",
        "armourValue",
        "unitStorage",
        "materialStorage",
        "hangarCapacity",
        "equipmentSlots",
        "engineSlot"
    ]
}