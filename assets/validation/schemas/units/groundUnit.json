{
    "$schema": "http://json-schema.org/schema#",
    "title": "ground unit",
    "description": "schema for groundforces in the game. Infantry, Tanks, Walkers, Basic Airplanes",
    "type": "object",

    "properties": {
        "class": {
            "type": "string"
        },
        "subclass": {
            "type": "string"
        },
        "metaData": {
            "type": "object",
            "properties": {
                "designName": {
                    "type": "string"
                },
                "length": {
                    "type": "integer"
                },
                "height": {
                    "type": "integer"
                },
                "width": {
                    "type": "integer"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "buildCosts": {
            "$ref": "../basics/resourceSet.json"
        },
        "maintenanceCosts": {
            "$ref": "../basics/resourceSet.json"
        },
        "armour": {
            "type": "integer"
        },
        "shield": {
            "type": "number"
        },
        "speed": {
            "type": "number"
        },
        "stealth": {
            "type": "number"
        },
        "recon": {
            "type": "number"
        },
        "damage": {
            "type": "number"
        },
        "equipmentSlots": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "identifier": {
                        "type": [
                            "string",
                            "array"
                        ],
                        "items": {
                            "type": "string"
                        }
                    },
                    "defaultItem": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                }
            }
        }
    },
    "required": [
        "class",
        "subclass",
        "buildCosts",
        "armour",
        "shield",
        "speed",
        "stealth",
        "recon",
        "damage"
    ]
}